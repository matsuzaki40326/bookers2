 <%= render 'books/user-info', user: @user, book: @book %>

<h2>Books</h2>
 <table>
   <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
   </tr>
   <% @books.each do |book| %>
   <tr>
     <td><%= image_tag book.user.get_profile_image(40,40) %><td>
     <td>
     <%= link_to book_path(book.id) do %>
     <%= book.title %>
     <% end %>
     </td>
     <td>
      <%= book.body %>
     </td>
   </tr>
   <% end %>
 </table>

