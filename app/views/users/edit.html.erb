<div class="container pt-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-3 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>

      <% if @user.errors.any? %>
　    <div id="error_explanation">
　    <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
　     <ul>
　      <% @user.errors.full_messages.each do |message| %>
　      <li><%= message %></li>
        <% end %>
       </ul>
      </div>
      <% end %>

      <%= form_with model: @user, local: true do |f| %>

       <label for="inputName">Name</label>
       <p><%= f.text_field :name, id:"inputName" %></p>

       <label for="inputImage">Image</label>
       <p><%= f.file_field :profile_image, accept: "image/*" %></p>

       <label for="inputIntroduction">Introduction</label>
       <p><%= f.text_area :introduction, id:"inputIntroduction" %></p>

       <%= f.submit 'Update User', class: 'btn btn-secondary' %>

      <% end %>

    </div>
  </div>
</div>
