<h2>User info</h2>

<h2>New book</h2>
<%= form_with model: @book, local: true do |f| %>

 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <%= f.text_area :body %><br />
  <%= f.submit 'Create Book' %>

<% end %>

<h2>Books</h2>
 <table>
   <tr>
     <th>Title</th>
     <th>Opinion</th>
   </tr>

   <% @books.each do |book| %>
   <tr>
     <%= link_to book_path(book.id) do %>
     <td><%= book.title %></td>
     <% end %>
     <td><%= book.body %></td>
     <% if book.user == current_user %>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
     <% end %>
   </tr>
 </table>

<% end %>