

<div class="container pt-5">
  <div class="row">

    <%= render 'user-info', user: @user, book: @newbook %>

    <div class="col-md-8 offset-md-1">

    <h2>Book detail</h2>

    <table class="table">
      <tr>
        <td>
         <%= link_to user_path(@book.user) do %>
         <%= image_tag @book.user.get_profile_image(40,40) %><br />
         <%= @book.user.name %>
         <% end %>
        </td>
        <td>
         <%= link_to book_path(@book) do %>
         <%= @book.title %>
         <% end %>
        </td>
        <td>
         <%= @book.body %>
        </td>
        <% if @book.user == current_user %>
        <td>
         <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %>
        </td>
        <td>
         <%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-danger' %>
        <% end %>
        </td>
      </tr>
    </table>
    </div>
  </div>
</div>
