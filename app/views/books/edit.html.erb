<div class="container pt-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-3 px-5 px-sm-0 mx-auto">

     <h2>Editing Book</h2>

      <% if @book.errors.any? %>
     　<div id="error_explanation">
　     <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
　      <ul>
　       <% @book.errors.full_messages.each do |message| %>
　        <li><%= message %></li>
         <% end %>
        </ul>
       </div>
      <% end %>

      <%= form_with model: @book,  local: true do |f| %>
       <label class="inputTitle">Title</label>
       <p><%= f.text_field :title, id:"inputTitle" %></p>

       <label class="inputOpinion">Opinion</label>
       <p><%= f.text_area :body, id:"inputOpinion" %></p>

       <%= f.submit 'Update Book', class: 'btn btn-success mb-3' %>

      <% end %>

      <%= link_to "Show", book_path(@book) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>